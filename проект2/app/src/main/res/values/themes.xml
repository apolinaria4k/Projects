<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="lv">
        <item name="android:textSize">@dimen/txtSz</item>
        <item name="android:layout_margin">@dimen/mgn</item>
    </style>
    <style name="et">
        <item name="android:textSize">@dimen/txtSz</item>
        <item name="android:layout_margin">@dimen/mgn</item>
        <item name="android:background">@color/et</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="btn">
        <item name="android:textSize">@dimen/btn</item>
        <item name="android:layout_margin">@dimen/mgn</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/btn</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>